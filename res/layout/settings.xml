			/>	    
	    
	    <CheckBoxPreference
			android:title="Auto Speakerphone"
			android:key="autoSpeakerphone"
			android:summary="Automatically enable speakerphone when a call is answered from the watch."
			android:defaultValue="false"
			/>
	    
	</PreferenceScreen>

		
 	<PreferenceScreen
 		android:title="@string/settings_Analog"
 		>
 		<CheckBoxPreference
			android:title="Pause Before Scrolling"
			android:key="pauseBeforeScrolling"
			android:summary="Pause a few seconds before scrolling long messages on the analog watch"
 			android:defaultValue="false"
 			/>
 	</PreferenceScreen>	
	
	<PreferenceScreen
		android:title="@string/settings_Digital"
		>
 		
		<ListPreference 
			android:entries="@array/settings_quick_button_name" 
			android:entryValues="@array/settings_quick_button_value" 
			android:dialogTitle="Quick Button Action" 
			android:key="QuickButton" 
			android:title="Quick Button Action"
			android:summary="Action for Right Middle Button on non-app idle pages"
			android:negativeButtonText="@string/settings_CancelButton"
 			android:defaultValue="0"
 			/>
		
		<CheckBoxPreference
			android:title="Sticky Notifications"
			android:key="stickyNotifications"
			android:summary="Use sticky notifications (that stay on screen until manually dismissed)"
			android:defaultValue="true"
			/>
			
		<EditTextPreference
			android:title="Sticky Notification Timeout"
			android:key="stickyNotificationTimeout"
			android:summary="Default time sticky notifications wait before returning to idle screen (seconds)"
			android:numeric="integer"
			android:defaultValue="120"
			/>

		<CheckBoxPreference
			android:title="Invert LCD"
			android:key="InvertLCD"
			android:summary="Switch black/white bit"
			android:defaultValue="false"
			/>

	    <CheckBoxPreference
			android:title="@string/settings_Display_widget_row_separator"
			android:key="DisplayWidgetRowSeparator"
			android:summary="@string/settings_Display_widget_row_separator_desc"
			android:defaultValue="false"
			/>

		<CheckBoxPreference
			android:title="Clock on Every Page"
			android:key="ClockOnEveryPage"
			android:summary="Show the clock on all widget pages"
			android:defaultValue="false"
			android:disableDependentsState="true"
			/>

		<CheckBoxPreference
			android:title="Use App Buffer for Clock-less Widget Pages"
			android:key="AppBufferForClocklessPages"
			android:summary="Makes the clock and status icon visible when the watch connection is lost, but loses built-in button actions on affected pages."
			android:defaultValue="true"
			android:dependency="ClockOnEveryPage"
			/>

	</PreferenceScreen>	
	
